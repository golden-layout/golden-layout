{
  "name": "golden-layout",
  "version": "2.0.0-alpha.1",
  "description": "A multi-screen javascript Layout manager \r https://golden-layout.com",
  "keywords": [
    "docking",
    "javascript",
    "layout",
    "layout manager",
    "popouts"
  ],
  "homepage": "https://github.com/golden-layout/golden-layout",
  "bugs": {
    "url": "https://github.com/golden-layout/golden-layout/issues"
  },
  "license": "MIT",
  "author": "deepstreamHub GmbH",
  "main": "dist/cjs/golden-layout.js",
  "module": "dist/module/index.js",
  "typings": "dist/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:webpack": "npx webpack --mode development --config ./webpack/demo/webpack.config.js",
    "build:module": "tsc -p tsconfig.module.json",
    "build:module:full": "tsc -p tsconfig.module.full.json",
    "build:module:strip": "tsc -p tsconfig.module.strip.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:ts": "npm run build:module && npm run build:cjs",
    "build:styles": "node ./scripts/css.js",
    "build": "npm run clean && npm-run-all --parallel build:*",
    "clean": "npm-run-all clean:*",
    "clean:dist": "npx del-cli dist",
    "lint:autofix": "eslint src/js_es6 --fix",
    "lint:ts": "eslint -c .eslintrc.js --ext .ts src/js_es6",
    "demo": "webpack-dev-server --env.dev --mode development --config ./webpack/demo/webpack.config.js",
    "test": "cross-env karma start",
    "coverage": "karma start --single-run --no-auto-watch --coverage=true || echo done",
    "doc:full": "npx del-cli doc/full && typedoc --options ./typedoc.full.json",
    "doc:strip": "npx del-cli doc/strip && typedoc --options ./typedoc.stripInternal.json"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "autoprefixer": "^10.0.2",
    "babel-loader": "^8.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "jasmine": "^3.6.3",
    "jasmine-core": "^3.6.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^4.0.2",
    "less": "^3.12.2",
    "less-loader": "^7.1.0",
    "npm-run-all": "^4.0.1",
    "postcss": "^8.1.7",
    "style-loader": "^1.3.0",
    "ts-loader": "^8.0.11",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "optionalDependencies": {
    "react": "14 || 15 || 16",
    "react-dom": "14 || 15 || 16"
  },
  "browserslist": [
    "defaults",
    "not op_mini all"
  ]
}
